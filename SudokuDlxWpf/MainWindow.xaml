<Window x:Class="SudokuDlxWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:SudokuDlxWpf"
        Title="Sudoku Solver"
        Height="600"
        Width="600">

    <Window.Background>
        <VisualBrush TileMode="Tile" Viewport="0,0,0.2,0.2">
            <VisualBrush.Visual>
                <Image Source="Assets\Pattern - Apple Wood@2x.png" />
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    
    <Grid>
        <view:BoardControl x:Name="BoardControl" Width="544" Height="544"></view:BoardControl>
    </Grid>
    
</Window>
